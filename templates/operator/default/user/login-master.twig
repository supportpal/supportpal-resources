<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{% block title %}{{ Lang.get('core.product_name') }} - {{ Lang.get('core.operator_panel') }}{% endblock %}</title>

    <!-- Icons -->
    <link rel="apple-touch-icon" sizes="180x180" href="{{ get_favicon('resources/assets/operator/images/favicon/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ get_favicon('resources/assets/operator/images/favicon/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ get_favicon('resources/assets/operator/images/favicon/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('resources/assets/operator/images/favicon/site.webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('resources/assets/operator/images/favicon/safari-pinned-tab.svg') }}" color="#06548c">
    <link rel="shortcut icon" href="{{ get_favicon('resources/assets/operator/images/favicon/favicon.ico') }}">
    <meta name="application-name" content="SupportPal"/>
    <meta name="msapplication-TileColor" content="#06548c">
    <meta name="msapplication-config" content="{{ asset('resources/assets/operator/images/favicon/browserconfig.xml') }}">
    <meta name="theme-color" content="#ffffff">

    <link href="{{ asset_rev('resources/assets/operator/css/login.css') }}" rel="stylesheet" type="text/css" />

    {# Brand styling - delete this block if you don't want to apply the automatic brand colour styling. #}
    {% if operatorCSS is not empty %}
        <style>
            {{ operatorCSS|raw }}
        </style>
    {% endif %}

    <script src="{{ asset_rev('resources/assets/libs/jquery/js/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset_rev('resources/assets/operator/js/main.js') }}" type="text/javascript"></script>

    {% block scripts_header %}{% endblock %}
</head>

<body>

	<div class="container">

		<div class="wrapper">

            <div class="logo-container">
                {% block logo %}
                    <img src="{{ get_icon('resources/assets/operator/images/favicon/favicon_white.png') }}"
                         alt="{{ Lang.get('core.product_name') }}" style="max-width: 80px;" />
                {% endblock %}

                {% block content_title %}
                    <h1>{{ Lang.get('core.operator_panel') }}</h1>
                {% endblock %}
            </div>

			{% block content %}{% endblock %}

		</div>

	</div>

    <script type="text/javascript" src="{{ asset_rev('resources/assets/libs/common.min.js') }}"></script>
    <link href="{{ asset_rev('resources/assets/libs/css/common.min.css') }}" rel="stylesheet" type="text/css" property="stylesheet" />

	{% block scripts_footer %}{% endblock %}

</body>

</html>